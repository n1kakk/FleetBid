{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },

  "IdentityServiceUrl": "http://identitservice",
  "AllowedHosts": "*",
  "ClientApp": "http://localhost:3000",

  "ReverseProxy": {
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://auctionservice"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://searchservice"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidApi": {
            "Address": "http://bidsservice"
          }
        }
      },
      "nt": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://ntservice"
          }
        }
      }
    }
  }

}
